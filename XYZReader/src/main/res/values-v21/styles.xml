<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Bacon.Detail">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.Bacon" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Bacon.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BaconTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="BaconTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:windowActionBar">false</item>
    </style>
</resources>